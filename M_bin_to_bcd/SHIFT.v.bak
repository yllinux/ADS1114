module SHIFT (din, dout);
    
    input   [19:0] din;
    output  [19:0] dout;
    
    wire    [3:0]  sout1;  //shift out 即移位输出
    wire    [3:0]  sout2;
    wire    [3:0]  sout3;

    CMP U_CMP_1            //din[19:16] 进行大四加三比较
    (
        .cmp_in       ( din[19:16] ),
        .cmp_out      ( sout1      )
    );
    
    CMP U_CMP_2            //din[15:12] 进行大四加三比较
    (
        .cmp_in       ( din[15:12] ),
        .cmp_out      ( sout2      )
    );
    
    CMP U_CMP_3            //din[11:8] 进行大四加三比较 
    (
        .cmp_in       ( din[11:8]  ),
        .cmp_out      ( sout3      )
    );
    
    //din[19:8] 全部比较完之后，左移一位
    assign dout = {sout1[2:0], sout2, sout3, din[7:0], 1'b0};
    
endmodule